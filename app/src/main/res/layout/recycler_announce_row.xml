<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginStart="2dp"
    android:layout_marginLeft="2dp"
    android:layout_marginEnd="2dp"
    android:layout_marginRight="2dp"
    android:layout_marginBottom="1dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="첫번째 공지사항"
            android:id="@+id/Announce_text"
            android:textSize="30dp"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/gmmedium"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Announce_YearData"
            tools:text="2020"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/gmmedium"
            android:textSize="20dp"
            android:layout_below="@id/Announce_text"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Announce_Year"
            android:text="년"
            android:textSize="20dp"
            android:layout_marginLeft="70dp"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/gmmedium"
            android:layout_below="@id/Announce_text"
            android:layout_marginTop="50dp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="월"
            android:textSize="20dp"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/gmmedium"
            android:id="@+id/Announce_Month"
            android:layout_toRightOf="@id/Announce_Year"
            android:layout_below="@id/Announce_text"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Announce_MonthData"
            tools:text="06"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/gmmedium"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/Announce_text"
            android:layout_toRightOf="@id/Announce_Year"
            android:layout_marginTop="50dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="일"
            android:textSize="20dp"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/gmmedium"
            android:id="@+id/Announce_Day"
            android:layout_toRightOf="@id/Announce_Month"
            android:layout_below="@id/Announce_text"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Announce_DayData"
            tools:text="24"
            android:textColor="@color/colorBlack"
            android:fontFamily="@font/gmmedium"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/Announce_text"
            android:layout_toRightOf="@id/Announce_Month"
            android:layout_marginTop="50dp"
            />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow"
            android:layout_alignParentRight="true"
            android:layout_marginTop="40dp"
            />


    </RelativeLayout>

</androidx.cardview.widget.CardView>
