<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reservation_Text"
        android:text="RESERVATION"
        android:textSize="45dp"
        android:fontFamily="@font/gmmedium"
        android:textColor="@color/colorBlack"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/reservation_logo"
        />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/splash_logo"
        android:id="@+id/reservation_logo"
        android:layout_marginLeft="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reservation_Text"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reservation_StoreName"
        android:text="주연이네 가정백반"
        android:textSize="30dp"
        android:fontFamily="@font/gmlight"
        android:textColor="@color/colorBlack"
        android:layout_marginLeft="80dp"
        android:background="@drawable/btn_background"
        app:layout_constraintTop_toBottomOf="@id/reservation_logo"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인원"
        android:textColor="@color/colorBlack"
        android:textSize="30dp"
        android:fontFamily="@font/gmmedium"
        android:id="@+id/reservation_Number"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/reservation_StoreName"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <Spinner
        android:id="@+id/reservation_Spinner_Number"
        android:layout_width="wrap_content"
        android:layout_height="51dp"
        android:layout_marginTop="5dp"
        android:entries="@array/인원"
        android:gravity="right"
        android:textColor="@color/colorBlack"
        android:layout_marginStart="15dp"
        android:textSize="50dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toBottomOf="@id/reservation_Number"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="시간"
        android:textColor="@color/colorBlack"
        android:textSize="30dp"
        android:fontFamily="@font/gmmedium"
        android:id="@+id/reservation_Time"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/reservation_Spinner_Number"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <Spinner
        android:id="@+id/reservation_Spinner_Hour"
        android:layout_width="wrap_content"
        android:layout_height="51dp"
        android:layout_marginTop="5dp"
        android:entries="@array/시"
        android:gravity="right"
        android:textColor="@color/colorBlack"
        android:layout_marginStart="15dp"
        android:textSize="50dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toBottomOf="@id/reservation_Time"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="시"
        android:textSize="30dp"
        android:textColor="@color/colorBlack"
        android:fontFamily="@font/gmmedium"
        android:id="@+id/reservation_Hour"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/reservation_Time"
        app:layout_constraintLeft_toRightOf="@id/reservation_Spinner_Hour"
        />

    <Spinner
        android:id="@+id/reservation_Spinner_Minute"
        android:layout_width="wrap_content"
        android:layout_height="51dp"
        android:layout_marginTop="5dp"
        android:entries="@array/분"
        android:gravity="right"
        android:textColor="@color/colorBlack"
        android:layout_marginStart="15dp"
        android:textSize="50dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toBottomOf="@id/reservation_Time"
        app:layout_constraintLeft_toRightOf="@id/reservation_Hour"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="분"
        android:textSize="30dp"
        android:textColor="@color/colorBlack"
        android:fontFamily="@font/gmmedium"
        android:id="@+id/reservation_Minute"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/reservation_Time"
        app:layout_constraintLeft_toRightOf="@id/reservation_Spinner_Minute"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="요청사항"
        android:textColor="@color/colorBlack"
        android:textSize="30dp"
        android:fontFamily="@font/gmmedium"
        android:id="@+id/reservation_Request_Text"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/reservation_Minute"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/reservation_Alert"
        android:text="예약 후 식당을 방문하지 않을 경우
     결제한 금액은 환불되지 않습니다.
        주의해주시기 바랍니다."
        android:textSize="25dp"
        android:textColor="@color/colorBlack"
        android:fontFamily="@font/gmmedium"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reservation_Request"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:ems="100"
        android:id="@+id/reservation_Request"
        android:background="@drawable/btn_background"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/gmlight"
        android:gravity="top"
        android:textSize="20dp"
        android:hint="요청사항을 기입해주세요."
        app:layout_constraintTop_toBottomOf="@id/reservation_Request_Text"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/reservation_Payment"
        android:text="결제하기"
        android:textSize="30dp"
        android:textColor="@color/colorBlack"
        android:background="@drawable/btn_background"
        android:fontFamily="@font/gmmedium"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/reservation_Alert"
        app:layout_constraintLeft_toLeftOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>