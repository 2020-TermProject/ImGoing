<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="100dp"
                android:src="@drawable/splash_logo"/>
            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="#ff000000"
                android:textSize="30dp"
                android:fontFamily="@font/gmmedium"
                android:text="가게 등록" />
        </LinearLayout>

        <TextView
            android:id="@+id/restaurantName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="25dp"
            android:textColor="#000000"
            android:fontFamily="@font/gmmedium"
            android:text="가게 이름 "
            android:layout_marginStart ="15dp"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:layout_marginTop="5dp"
            android:hint="가게 이름을 입력해주세요."
            android:textSize="30dp"
            android:fontFamily="@font/gmlight"
            android:layout_marginStart="15dp"/>


        <TextView
            android:id="@+id/textview_restaurantCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:textSize="25dp"
            android:textColor="#000000"
            android:fontFamily="@font/gmmedium"
            android:text="카테고리"
            />

        <Spinner
            android:id="@+id/txt_question_type"
            android:layout_width="wrap_content"
            android:layout_height="51dp"
            android:layout_marginTop="5dp"
            android:entries="@array/카테고리"
            android:gravity="right"
            android:textColor="#000000"
            android:layout_marginStart="15dp"
            android:textSize="30dp"
            />

        <TextView
            android:id="@+id/textview_restaurantInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="25dp"
            android:textColor="#000000"
            android:fontFamily="@font/gmmedium"
            android:text="가게 소개"
            android:layout_marginStart="15dp"/>

        <EditText
            android:id="@+id/restaurantInfo"
            android:layout_width="359dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:layout_marginTop="5dp"
            android:hint="메뉴 소개를 해주세요."
            android:textSize="28dp"
            android:fontFamily="@font/gmlight"
            />
        <TextView
            android:id="@+id/restaurantSeat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="25dp"
            android:textColor="#000000"
            android:fontFamily="@font/gmmedium"
            android:text="가게 좌석 수"
            android:layout_marginStart="15dp"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/seatspinner"
            android:entries="@array/좌석수"
            android:layout_marginLeft="15dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp"/>


        <TextView
            android:id="@+id/textview_restaurantTel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="25dp"
            android:textColor="#000000"
            android:fontFamily="@font/gmmedium"
            android:text="가게 전화번호"
            android:layout_marginStart="15dp"/>

        <EditText
            android:id="@+id/restaurantTel"
            android:layout_width="359dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:layout_marginTop="5dp"
            android:hint="전화번호를 입력해주세요."
            android:textSize="28dp"
            android:fontFamily="@font/gmlight"
            />
        <TextView
            android:id="@+id/textview_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/gmmedium"
            android:textColor="#000000"
            android:text="가게 위치"
            android:textSize="25dp"
            android:layout_marginStart="15dp"/>

        <WebView
            android:id="@+id/webView_address"
            android:layout_width="250dp"
            android:layout_height="50dp" />
        <TextView
            android:id="@+id/txt_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="받은 주소" />


        <Button
            android:id="@+id/addmenu"
            android:layout_width="291dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:text="메뉴 추가"
            android:onClick="startSignup"
            tools:ignore="OnClick" />

        <Button
            android:id="@+id/addrestaurant"
            android:layout_width="291dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:text="가게 등록"
            android:onClick="startSignup"
            tools:ignore="OnClick" />

        <Button
            android:id="@+id/back"
            android:layout_width="291dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="Back" />

    </LinearLayout>
</ScrollView>