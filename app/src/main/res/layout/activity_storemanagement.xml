<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/splash_logo"
        android:id="@+id/Storemanagement_Image"
        android:layout_marginLeft="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가게 관리"
        android:id="@+id/Storemanagement_Text"
        android:textColor="@color/colorBlack"
        android:textSize="50dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/gmmedium"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/Storemanagement_Image"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가게 이름 변경"
        android:textSize="30dp"
        android:textColor="@color/colorBlack"
        android:id="@+id/Storemanagement_Change"
        android:fontFamily="@font/gmmedium"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/Storemanagement_Image"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="15"
        android:hint="변경된 가게 이름을 입력해주세요."
        android:fontFamily="@font/gmmedium"
        android:id="@+id/Storemanagement_ChangeEdit"
        android:textSize="20dp"
        android:textColor="@color/colorBlack"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/Storemanagement_Change"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Storemanagement_ChangeCategory"
        android:text="카테고리 변경"
        android:textColor="@color/colorBlack"
        android:textSize="30dp"
        android:fontFamily="@font/gmmedium"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/Storemanagement_ChangeEdit"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/Storemanagement_ChangeCategorySpinner"
        android:entries="@array/카테고리"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/Storemanagement_ChangeCategory"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Storemanagement_IntroduceChange"
        android:text="가게 소개 변경"
        android:textSize="30dp"
        android:textColor="@color/colorBlack"
        android:fontFamily="@font/gmmedium"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/Storemanagement_ChangeCategorySpinner"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Storemanagement_IntroduceChangeEdit"
        android:hint="변경된 가게 소개를 입력해주세요."
        android:ems="15"
        android:textSize="20dp"
        android:fontFamily="@font/gmmedium"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/Storemanagement_IntroduceChange"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Storemanagement_SeatChange"
        android:text="가게 좌석 수 변경"
        android:textSize="30dp"
        android:textColor="@color/colorBlack"
        android:fontFamily="@font/gmmedium"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/Storemanagement_IntroduceChangeEdit"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:entries="@array/좌석수"
        android:id="@+id/Storemanagement_SeatChangeSppiner"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/Storemanagement_SeatChange"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가게 전화번호 변경"
        android:id="@+id/Storemanagement_PhoneChange"
        android:textColor="@color/colorBlack"
        android:textSize="30dp"
        android:fontFamily="@font/gmmedium"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/Storemanagement_SeatChangeSppiner"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="변경된 전화번호를 입력해주세요"
        android:textSize="20dp"
        android:id="@+id/Storemanagement_PhoneChangeEdit"
        android:ems="15"
        android:fontFamily="@font/gmmedium"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/Storemanagement_PhoneChange"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Storemanagement_MenuChange"
        android:text="메뉴 변경"
        android:textSize="30dp"
        android:textColor="@color/colorBlack"
        android:fontFamily="@font/gmmedium"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/Storemanagement_PhoneChangeEdit"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/Storemanagement_MenuChangeButton"
        android:background="@drawable/btn_fullbackground"
        android:text="메뉴 변경"
        android:textSize="20dp"
        android:textColor="@color/colorBlack"
        android:fontFamily="@font/gmmedium"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/Storemanagement_MenuChange"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Storemanagement_PlaceChange"
        android:text="가게 위치 변경"
        android:textColor="@color/colorBlack"
        android:textSize="30dp"
        android:fontFamily="@font/gmmedium"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/Storemanagement_MenuChangeButton"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <WebView
        android:id="@+id/Storemanagement_webView_address"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/Storemanagement_PlaceChange"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Storemanagement_Complete"
        android:text="변경 완료하기"
        android:textSize="30dp"
        android:textColor="@color/colorBlack"
        android:fontFamily="@font/gmmedium"
        android:background="@drawable/btn_background"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/Storemanagement_webView_address"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>