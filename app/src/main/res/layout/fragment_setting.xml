<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--    <ImageButton-->
        <!--        android:id="@+id/login"-->
        <!--        android:layout_width="wrap_content"-->
        <!--        android:layout_height="wrap_content"-->
        <!--        android:background="@android:color/transparent"-->
        <!--        android:src="@drawable/login"-->
        <!--        android:text="로그인"-->
        <!--        android:textSize="20dp"-->
        <!--        app:layout_constraintLeft_toLeftOf="parent"-->
        <!--        app:layout_constraintTop_toTopOf="parent" />-->

        <Button
            android:id="@+id/setting_Announce"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_background"
            android:drawableRight="@drawable/arrow"
            android:fontFamily="@font/gmmedium"
            android:paddingStart="10dp"
            android:text="공지사항"
            android:textAlignment="viewStart"
            android:textSize="30dp"
            app:layout_constraintTop_toBottomOf="@+id/setting_logo" />

        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/btn_background"
            android:drawableRight="@drawable/arrow"
            android:fontFamily="@font/gmmedium"
            android:paddingStart="10dp"
            android:text="로그인"
            android:textAlignment="viewStart"
            android:textSize="30dp"
            app:layout_constraintTop_toBottomOf="@+id/setting_History" />



        <Button
            android:id="@+id/setting_History"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/btn_background"
            android:drawableRight="@drawable/arrow"
            android:fontFamily="@font/gmmedium"
            android:paddingStart="10dp"
            android:text="예약내역"
            android:textAlignment="viewStart"
            android:textSize="30dp"
            app:layout_constraintTop_toBottomOf="@+id/setting_Manage" />

        <Button
            android:id="@+id/setting_Enroll"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/btn_background"
            android:drawableRight="@drawable/arrow"
            android:fontFamily="@font/gmmedium"
            android:paddingStart="10dp"
            android:text="가게 등록"
            android:textAlignment="viewStart"
            android:textSize="30dp"
            app:layout_constraintTop_toBottomOf="@id/setting_Announce" />

        <Button
            android:id="@+id/setting_Manage"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/btn_background"
            android:drawableRight="@drawable/arrow"
            android:fontFamily="@font/gmmedium"
            android:paddingStart="10dp"
            android:text="가게 관리"
            android:textAlignment="viewStart"
            android:textSize="30dp"
            app:layout_constraintTop_toBottomOf="@id/setting_Enroll" />

        <ImageView
            android:id="@+id/setting_logo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/splash_logo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/setting_Text" />

        <TextView
            android:id="@+id/setting_Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:fontFamily="@font/gmmedium"
            android:text="SETTING"
            android:textColor="@color/colorBlack"
            android:textSize="50dp"
            app:layout_constraintBottom_toTopOf="@id/setting_logo"
            app:layout_constraintLeft_toLeftOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>