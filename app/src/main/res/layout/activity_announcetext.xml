<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/splash_logo"
        android:id="@+id/AnnounceText_Image"
        android:layout_marginLeft="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="공지사항"
        android:id="@+id/AnnounceText_Text"
        android:textColor="@color/colorBlack"
        android:textSize="50dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/gmmedium"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/AnnounceText_Image"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="첫번째 공지사항"
        android:id="@+id/AnnounceText_Title"
        android:textColor="@color/colorBlack"
        android:textSize="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/gmmedium"
        app:layout_constraintTop_toBottomOf="@id/AnnounceText_Text"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/AnnounceText_Date"
        tools:text="2020.06.24"
        android:textSize="15dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/colorBlack"
        android:fontFamily="@font/gmmedium"
        app:layout_constraintTop_toBottomOf="@id/AnnounceText_Title"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/AnnounceText_Announce"
        tools:text="공지사항 내용"
        android:textColor="@color/colorBlack"
        android:textSize="20dp"
        android:fontFamily="@font/gmmedium"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_background"
        app:layout_constraintTop_toBottomOf="@id/AnnounceText_Date"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>