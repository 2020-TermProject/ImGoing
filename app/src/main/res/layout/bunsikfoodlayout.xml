<?xml version="1.0" encoding="utf-8"?>
<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@color/colorseashell"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="분식 내가 간다"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:textSize="50dp"
            android:layout_gravity="center"
            android:fontFamily="@font/cafefont"/>


        <Button
            android:id="@+id/bshop1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Button 1" />

        <Button
            android:id="@+id/bshop2"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Button 2" />

        <Button
            android:id="@+id/bshop3"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Button 3" />

        <Button
            android:id="@+id/bshop4"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Button 4" />

        <Button
            android:id="@+id/bshop5"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Button 5" />

        <Button
            android:id="@+id/bshop6"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Button 6" />

    </LinearLayout>

</ScrollView>

