<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/storepage_Text"
        android:text="STORE"
        android:textSize="50dp"
        android:fontFamily="@font/gmmedium"
        android:textColor="@color/colorBlack"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/storepage_logo"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/storepage_StoreName"
        android:text="주연이네 가정백반"
        android:textSize="30dp"
        android:fontFamily="@font/gmlight"
        android:textColor="@color/colorBlack"

        android:background="@drawable/btn_background"
        app:layout_constraintTop_toBottomOf="@id/storepage_logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/splash_logo"
        android:id="@+id/storepage_logo"
        android:layout_marginLeft="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/storepage_Text"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:id="@+id/storepage_StoreImage"
        android:src="@drawable/storepage_example"
        app:layout_constraintTop_toBottomOf="@id/storepage_StoreName"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/storepage_Reserve"
        android:text="예약하기"
        android:textAlignment="center"
        android:textSize="30dp"
        android:fontFamily="@font/gmmedium"
        android:background="@drawable/btn_background"
        app:layout_constraintTop_toBottomOf="@id/storepage_StoreImage"
        tools:ignore="MissingConstraints" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/storepage_Review"
        android:text="리뷰하기"
        android:textAlignment="center"
        android:textSize="30dp"
        android:fontFamily="@font/gmmedium"
        android:background="@drawable/btn_background"
        app:layout_constraintTop_toBottomOf="@id/storepage_Reserve"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>